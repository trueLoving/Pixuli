# Server Port
PORT=6000

# Database
# MySQL 数据库连接字符串
# 格式: mysql://用户名:密码@主机:端口/数据库名
# 示例: mysql://root:password@localhost:3306/pixuli
DATABASE_URL="mysql://root:password@localhost:3306/pixuli"

# Storage Configuration
# 存储类型配置（支持多个，用逗号分隔）：local, minio
# 示例: STORAGE_TYPES=local,minio  (同时使用本地和MinIO)
# 示例: STORAGE_TYPES=local        (仅使用本地存储)
# 示例: STORAGE_TYPES=minio        (仅使用MinIO)
STORAGE_TYPES=local

# Local Storage Configuration
# 本地存储目录（相对于项目根目录）
STORAGE_LOCAL_DIR=uploads/images

# MinIO Configuration
# MinIO 服务端点（主机:端口）
MINIO_ENDPOINT=localhost:9000
# MinIO 访问密钥
MINIO_ACCESS_KEY=minioadmin
# MinIO 秘密密钥
MINIO_SECRET_KEY=minioadmin
# MinIO 存储桶名称
MINIO_BUCKET=pixuli-images
# 是否使用 SSL（true/false）
MINIO_USE_SSL=false
# MinIO 区域（可选）
MINIO_REGION=us-east-1
