{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.pixuli.app",
  "productName": "Pixuli",
  "directories": {
    "output": "release"
  },
  "extraResources": [],
  "extraFiles": [],
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "node_modules/pixuli-wasm/index.js",
    "node_modules/pixuli-wasm/index.d.ts",
    "node_modules/pixuli-wasm/package.json",
    "node_modules/pixuli-wasm/pixuli-wasm.*.node",
    "node_modules/pixuli-wasm/wasi-worker-browser.mjs",
    "!**/node_modules/pixuli-wasm/{.cargo,src,target,*.rs,*.toml,*.lock,tsconfig.json}"
  ],
  "mac": {
    "category": "public.app-category.graphics-design",
    "artifactName": "${productName}_${version}_${arch}.${ext}",
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "compression": "maximum",
    "target": {
      "target": "dmg"
    }
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}_${version}_${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Pixuli"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}_${version}_${arch}.${ext}",
    "category": "Graphics",
    "description": "智能图片管理桌面应用",
    "desktop": {
      "Name": "Pixuli",
      "Comment": "智能图片管理桌面应用",
      "Keywords": "image;photo;management;compression;conversion;",
      "StartupWMClass": "Pixuli"
    }
  },
  "publish": {
    "provider": "github",
    "owner": "trueLoving",
    "repo": "pixuli",
    "channel": "latest",
    "releaseType": "release",
    "private": false,
    "vPrefixedTagName": true
  },
  "asar": true,
  "compression": "maximum",
  "removePackageScripts": true,
  "removePackageKeywords": true,
  "buildDependenciesFromSource": false,
  "nodeGypRebuild": false,
  "npmRebuild": false,
  "includeSubNodeModules": false
}
